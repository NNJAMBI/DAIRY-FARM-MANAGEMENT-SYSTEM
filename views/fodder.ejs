            <input type="number" class="form-control" id="Number of Buckets" placeholder="Enter No. of Buckets" ID number="number" min="1" max="100" >
        </div>
        <div class="form-group">
            <label for="Date of Entry">Date of Entry:</label>
            <input type="Date" class="form-control" id="Date" placeholder="Enter Date" Date of Entry="Date of Entry">
        </div>
        <div class="form-group">
            <label for="Time of Entry">Time of Entry:</label>
            <input type="Time" class="form-control" id="Time" placeholder="Enter Time" Time of Entry="TIme of Entry">
        </div>
        <button type="submit" class="btn btn-primary">Submit</button>
    </form>
