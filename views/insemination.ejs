        </div>
        <div class="col-sm-8">
            <h2>Insemination</h2>
            <p>Please fill up the form below.</p>
            <p class="border-success">
                <% if (typeof msg !== 'undefined'){ %>
                    <%= msg %>
                <% } else {%>
                    <%= msg='' %>
                <% } %>
            </p>
            <form action="/save-insemination-data" method="POST">
                <div class="form-group">
                    <label for="aiCost">AI Cost:</label>
                    <input type="number" class="form-control" id="aiCost" placeholder="Enter Artificial Insemination cost" name="aiCost" required>
                </div>
                <div class="form-group">
                    <label for="servingBull">Serving Bull:</label>
                    <input type="text" class="form-control" id="servingBull" placeholder="Enter Serving Bull" name="servingBull" required>
                </div>
<!--                <div class="form-group">-->
<!--                    <label for="date">Date:</label>-->
<!--                    <input type="datetime-local" class="form-control" id="date" placeholder="Enter date" name="date" required>-->
<!--                </div>-->
                <div class="form-group">
                    <label for="cowName">Cow Name:</label>
                    <input type="text" class="form-control" id="cowName" placeholder="Enter Cow Name" name="cowName" required>
                </div>
                <div class="form-group">
                    <label for="breed">Breed:</label>
                    <select class="form-control" id="breed" name="breed" required>
                        <option value="">Select breed</option>
                        <option value="Fresian">Fresian</option>
                        <option value="Aryshire">Aryshire</option>
                        <option value="Aryshire">Guernsey</option>
                        <option value="Jersey">Jersey</option>
                    </select>
                </div>
                <button type="submit" class="btn btn-primary">Submit</button>
            </form>
        </div>
